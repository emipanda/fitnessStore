@model FitnessStore.Models.Category

@{
    Layout = "_Layout_AdminPanel";
    ViewData["Title"] = "Details";
}

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="col-md-6 user-data p-b-30">
                <h1 class="title-5 m-b-35">Category Details</h1>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Products)
                    </dt>
                    <dd class="col-sm-10">
                        <table class="table">
                            <tr>
                                <th>Product ID</th>
                                <th>Name</th>
                                <th>Price</th>
                            </tr>
                            @foreach (var item in Model.Products)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Price)
                                    </td>
                                    <td>
                                        <div class="table-data-feature">
                                            <button class="item" data-toggle="tooltip" data-placement="top" title="Edit" onclick="location.href='@Url.Action("ProductEdit", "AdminPanels", new { item.Id })'">
                                                <i class="zmdi zmdi-edit"></i>
                                            </button>
                                            <button class="item" data-toggle="tooltip" data-placement="top" title="Delete" onclick="location.href='@Url.Action("ProductDelete", "AdminPanels", new { item.Id })'">
                                                <i class="zmdi zmdi-delete"></i>
                                            </button>
                                            <button class="item" data-toggle="tooltip" data-placement="top" title="Details" onclick="location.href='@Url.Action("ProductDetails", "AdminPanels", new { item.Id })'">
                                                <i class="zmdi zmdi-more"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </table>
                    </dd>
                </dl>
                <div>
                    <a asp-action="CategoryEdit" asp-route-id="@Model.Id">Edit</a> |
                    <a asp-action="Tables">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>